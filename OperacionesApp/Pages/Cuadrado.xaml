<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Pages.Cuadrado"
             Title="Cuadrado">
    <VerticalStackLayout Padding="50" Spacing="5">
        <Label Text="Ingrese Numero de Lados:"/>
        <Entry x:Name="txtLadoR" Keyboard="Numeric" />
        <Label Text="Resultado:" />
        <Entry x:Name="txtResultado" IsReadOnly="True" />
        <Button x:Name="BtnCalcular" Text="Calcular" Clicked="BtnCalcular_Clicked" BackgroundColor="Green" />
        <Button x:Name="BtnLimpiar" Text="Limpiar" Clicked="BtnLimpiar_Clicked" BackgroundColor="Green" />
    </VerticalStackLayout>
</ContentPage>